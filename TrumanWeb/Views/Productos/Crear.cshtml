@model TrumanWeb.Controllers.ProductosController.ProductoConCategoriaViewModel

@{
    ViewData["Title"] = "Crear Producto";
}

<h1>@ViewData["Title"]</h1>

<div class="card">
    <div class="card-header">
        Crear Producto
    </div>
    <div class="card-body">
        <form method="post">
            <!-- Selección de categoría -->
            <div class="mb-3">
                <label for="IdCategoria" class="form-label">Categoría</label>
                <select id="CategoriaId" name="Producto.CategoriaId" class="form-control" required>
                    <option value="">Seleccionar Categoría</option>
                    @foreach (var categoria in Model.Categorias)
                    {
                        <option value="@categoria.IdCategoria">@categoria.Descripcion</option>
                    }
                </select>

            </div>

            <!-- Campos de texto -->
            <div class="mb-3">
                <label for="Nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="Nombre" name="Producto.NombreProducto" value="@Model.Producto.NombreProducto" required />
            </div>

            <div class="mb-3">
                <label for="Descripcion" class="form-label">Descripción</label>
                <textarea class="form-control" id="Descripcion" name="Producto.DescripcionProducto" required>@Model.Producto.DescripcionProducto</textarea>
            </div>

            <div class="mb-3">
                <label for="Precio" class="form-label">Precio</label>
                <input type="number" step="0.01" class="form-control" id="Precio" name="Producto.Precio" value="@Model.Producto.Precio" required />
            </div>

            <div class="mb-3">
                <label for="Stock" class="form-label">Stock</label>
                <input type="number" class="form-control" id="Stock" name="Producto.Stock" value="@Model.Producto.Stock" required />
            </div>

            <div class="mb-3">
                <label for="AlertaStock" class="form-label">Alerta de Stock</label>
                <input type="number" class="form-control" id="AlertaStock" name="Producto.AlertaStock" value="@Model.Producto.AlertaStock" required />
            </div>

            <div class="mb-3">
                <label for="UrlImagen" class="form-label">URL de la Imagen</label>
                <input type="url" class="form-control" id="UrlImagen" name="Producto.UrlImagen" value="@Model.Producto.UrlImagen" />
            </div>

            <!-- CheckBox -->
            <div class="form-check">
                <input class="form-check-input" type="checkbox" id="Activo" name="Producto.Activo" @(Model.Producto.Activo ? "checked" : "") />
                <label class="form-check-label" for="Activo">Activo</label>
            </div>

            <!-- Botón de envío -->
            <button type="submit" class="btn btn-primary mt-3">Guardar</button>
        </form>

        <!-- Mensaje de error -->
        @if (!ViewData.ModelState.IsValid)
        {
            <div class="alert alert-danger mt-3">
                <strong>Error:</strong> Hubo un problema al guardar el producto. Verifique los campos e intente nuevamente.
            </div>
        }
    </div>
</div>

<a href="@Url.Action("Index", "Productos")" class="btn btn-secondary mt-3">Volver a la lista de productos</a>
