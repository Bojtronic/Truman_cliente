@model List<TrumanWeb.Models.Producto>

@{
    ViewData["Title"] = "Productos - Lista";
}

<div class="text-center">
    <h1 class="display-4">Lista de Productos</h1>
</div>

<div class="card">
    <div class="card-header">
        Productos
        <a href="@Url.Action("Crear")" class="btn btn-primary float-end">Crear Producto</a>
    </div>
    <div class="card-body">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Categoria</th>
                    <th>Nombre</th>
                    <th>Descripción</th>
                    <th>Precio</th>
                    <th>Stock</th>
                    <th>Alerta Stock</th>
                    <th>Activo</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var producto in Model)
                {
                    <tr>
                        <td>@producto.IdProducto</td>
                        <td>@producto.IdCategoria</td>
                        <td>@producto.NombreProducto</td>
                        <td>@producto.DescripcionProducto</td>
                        <td>@producto.Precio</td>
                        <td>@producto.Stock</td>
                        <td>@producto.AlertaStock</td>
                        <td>@(producto.Activo ? "Sí" : "No")</td>
                        <td>
                            <a href="@Url.Action("Detalle", new { id = producto.IdProducto })" class="btn btn-info btn-sm">Ver</a>
                            <a href="@Url.Action("Editar", new { id = producto.IdProducto })" class="btn btn-warning btn-sm">Editar</a>
                            <form action="@Url.Action("Eliminar", new { id = producto.IdProducto })" method="post" class="d-inline">
                                <button type="submit" class="btn btn-danger btn-sm">Eliminar</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
